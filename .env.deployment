# ============================================================================
# EAGLE EYE DEPLOYMENT CONFIGURATION
# Copy this to .env and fill in your values
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_USER=eagle_eye
DB_PASSWORD=dev_password_123
DB_NAME=eagle_eye_db
DB_PORT=5432
DATABASE_URL=postgresql://eagle_eye:dev_password_123@postgres:5432/eagle_eye_db

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_123
REDIS_URL=redis://:redis_password_123@redis:6379/0

# ============================================================================
# MINIO (S3-COMPATIBLE STORAGE) CONFIGURATION
# ============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET_NAME=eagle-eye-uploads
MINIO_ENDPOINT=http://minio:9000

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_PORT=8000
API_HOST=0.0.0.0
API_KEY=your_api_key_change_me_to_something_secure_12345
JWT_SECRET=your_jwt_secret_key_change_me_to_something_secure_abcdef

# Service URLs (internal)
PARSER_URL=http://parser:8001
RULES_URL=http://rules:8002
PRICING_URL=http://pricing:8003
REPORTS_URL=http://reports:8004

# Service URLs (external, for client)
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================================================
# PARSER SERVICE CONFIGURATION
# ============================================================================
PARSER_PORT=8001
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_LANG=eng
POPPLER_PATH=/usr/bin

# ============================================================================
# RULES SERVICE CONFIGURATION
# ============================================================================
RULES_PORT=8002
RULES_CACHE_TTL=3600
DEFAULT_JURISDICTION=GA

# ============================================================================
# PRICING SERVICE CONFIGURATION
# ============================================================================
PRICING_PORT=8003
TRADEBASE_API_KEY=demo_key
TRADEBASE_API_URL=https://api.tradebase.com/v1
PRICING_CACHE_TTL=86400
DEFAULT_OP_RATE=0.20
DEFAULT_CONTINGENCY_PCT=0.10

# ============================================================================
# REPORTS SERVICE CONFIGURATION
# ============================================================================
REPORTS_PORT=8004
REPORT_TEMPLATE_DIR=/app/templates
REPORT_OUTPUT_DIR=/tmp/reports

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# Grafana
GRAFANA_PASSWORD=admin
GRAFANA_PROVISIONING_ENABLED=true

# Prometheus
PROMETHEUS_RETENTION_DAYS=30

# ============================================================================
# ENVIRONMENT
# ============================================================================
NODE_ENV=development
ENVIRONMENT=development

# ============================================================================
# CORS & SECURITY
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1,api,web

# ============================================================================
# NOTIFICATION CONFIGURATION
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@eagleeye.ai

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
ALLOWED_FILE_TYPES=pdf,xlsx,xls,jpg,png,dwg
UPLOAD_TIMEOUT=300  # seconds

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================
HUGGINGFACE_API_KEY=your_hf_token_here
OPENAI_API_KEY=your_openai_key_here

# ============================================================================
# DEVELOPMENT FLAGS
# ============================================================================
DEBUG=false
TESTING=false
SKIP_VERIFICATION=false
